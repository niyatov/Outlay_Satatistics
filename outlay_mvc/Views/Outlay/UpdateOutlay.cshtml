@using outlay_mvc.Dtoes;
@model UpdateOutlayDto

<form method="post" asp-action="UpdateOutlay" asp-route-outlayId="@ViewData["outlayId"]" class="mx-1 mx-md-4">

    <div class="mb-3">
        <label for="Name" class="form-label">Name</label>
        <input type="text" asp-for="Name" class="form-control">
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>

    <div class="mb-3">
        <label for="Description" class="form-label">Description</label>
        <input type="text" asp-for="Description" class="form-control">
        <span class="text-danger" asp-validation-for="Description"></span>
    </div>

    <div class="mb-3">
        <label for="Cost" class="form-label">Cost</label>
        <input type="number" asp-for="Cost" class="form-control">
        <span class="text-danger" asp-validation-for="Cost"></span>
    </div>


    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
        <button type="submit" class="btn btn-warning btn-lg">Update</button>
    </div>

</form>

<div class="text-danger" asp-validation-summary="ModelOnly"></div>
<br />
<br />
<td> <a asp-controller="Outlay" asp-action="GetOutlay" asp-route-outlayId=@ViewData["outlayId"] class="btn btn-info"> Go to outlay </a></td>
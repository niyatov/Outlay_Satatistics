@using outlay_mvc.Dtoes;
@model UpdateCategoryDto

<form method="post" asp-action="UpdateCategory" asp-route-categoryId="@ViewData["categoryId"]" asp-route-IsPrivate=@ViewData["IsPrivate"] class="mx-1 mx-md-4">
    
    <div class="mb-3">
        <label for="Name" class="form-label">Name</label>
        <input type="text" asp-for="Name" class="form-control">
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>

    <div class="mb-3">
        <label for="Description" class="form-label">Description</label>
        <input type="text" asp-for="Description" class="form-control">
        <span class="text-danger" asp-validation-for="Description"></span>
    </div>

    @if (Convert.ToInt32(ViewData["IsPrivate"]) == 0)
    {
        <div class="mb-3">
            <label for="Key" class="form-label">Key</label>
            <input type="text" asp-for="Key" class="form-control">
            <span class="text-danger" asp-validation-for="Key"></span>
        </div>
    }

    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
        <button type="submit" class="btn btn-warning btn-lg">Update</button>
    </div>

</form>

<div class="text-danger" asp-validation-summary="ModelOnly"></div>

<br />
<br />
<td> <a asp-controller="Category" asp-action="GetCategory" asp-route-categoryId=@ViewData["categoryId"]  class="btn btn-info"> Go to Category </a></td>